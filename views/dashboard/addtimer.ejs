<% include ./common/head %>
<% include ./common/sidebar %>


    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

      <!-- Main Content -->
      <div id="content">

        <% include ./common/navbar %>

        <!-- Begin Page Content -->
        <div class="container-fluid">

            <div class="container-fluid">

                <!-- Page Heading -->
                <h1 class="h3 mb-2 text-gray-800"><%=data.id ? 'Update': 'Add'%> Timer</h1>
                
                <!-- DataTales Example -->
                <div class="card shadow mb-4">
                  <div class="card-body">
                    
                    <form class="user"  method="post">
                        <div class="form-group row">
                            <div class="col-sm-6 mb-3 mb-sm-0">
                                <select name="site_id" class="form-control">
                                    <option>Please Select the Site</option>
                                    <% cdata.forEach(function(c){%>
                                    <option value="<%=c.id%>" <%=data.site_id == c.id ? 'selected': ''%>  ><%=c.name%></option>
                                    <% }) %>
                                </select>                               
                            </div>
                            <div class="col-sm-6">
                                <input type="text" class="form-control form-control-user" name="name" value="<%=data.name%>" placeholder="Name">
                            </div>
                        </div>
                        
                        <div class="form-group row">
                            <div class="col-sm-6 mb-3 mb-sm-0">
                                <input type="text" class="form-control form-control-user" name="settime" value="<%=data.set_time%>" placeholder="Set Time">
                            </div>
                            <div class="col-sm-6">
                                <select name="status" class="form-control">
                                    <option value="1" <%=data.status == 1 ? 'selected' : '' %> >start</option>
                                    <option value="0" <%=data.status == 0 ? 'selected' : '' %> >stop</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-6 mb-3 mb-sm-0">
                                <input type="text" class="form-control form-control-user" name="timercode" value="<%= data.timer_code ? data.timer_code : timer_code  %>" placeholder="Timer code">
                            </div>
                            
                        </div>
                        <button type="submit" class="btn btn-primary btn-user btn-block">
                            <%=data.id ? 'Update': 'Add'%> Timer
                        </button>
                    </form>
                  </div>
                </div>
            </div>
    </div>
    <!-- /.container-fluid -->

  </div>
  <!-- End of Main Content -->

 <% include ./common/footer %>

