<% include ./common/head %>
<% include ./common/sidebar %>


    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

      <!-- Main Content -->
      <div id="content">

        <% include ./common/navbar %>

        <!-- Begin Page Content -->
        <div class="container-fluid">

            <div class="container-fluid">

                <!-- Page Heading -->
                <h1 class="h3 mb-2 text-gray-800"><%= !site.id ? 'Add' : 'Update' %> Site</h1>
                <p class="mb-4">Fill the Site details </p>
      
                <!-- DataTales Example -->
                <div class="card shadow mb-4">
                  <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary"></h6>
                  </div>
                  <form class="user" method="POST">
                    <div class="form-group row">
                        <div class="col-sm-6 mb-3 mb-sm-0">                            
                          
                          <select name="company_id" class="form-control ">
                            <option>Please select the company</option>
                            <% company.forEach(function(c){ %>
                                <option value="<%=c.id%>" <%=c.id == site.company_id ? 'selected' : ""%> ><%=c.name%></option>
                            <% })%>
                          </select> 
                        </div>
                        <div class="col-sm-6">
                            <input type="text" name="name" value="<%=site.name%>" class="form-control form-control-user"  placeholder="Site Name">
                        </div>
                      </div>
                    
                    
                    <div class="form-group row">
                      <div class="col-sm-6 mb-3 mb-sm-0">
                        <input type="text" name="city" value="<%=site.city%>" class="form-control form-control-user" placeholder="City">
                      </div>
                      <div class="col-sm-6">
                        <input type="text" name="state" value="<%=site.state%>" class="form-control form-control-user" placeholder="State">
                      </div>
                    </div>
                    <div class="form-group row">
                      <div class="col-sm-6 mb-3 mb-sm-0">
                        <input type="text" name="street" value="<%=site.street%>" class="form-control form-control-user" placeholder="Street">
                      </div>
                      <div class="col-sm-6">
                          <input type="text" name="zip" value="<%=site.zip%>" class="form-control form-control-user" placeholder="zip">
                      </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-6 mb-3 mb-sm-0">
                            <input type="text" name="country" value="<%=site.country%>" class="form-control form-control-user" placeholder="Country">
                        </div>
                        <div class="col-sm-6">
                          <input type="text" name="phone" value="<%=site.phone%>" class="form-control form-control-user" placeholder="Phone Number">
                        </div>
                      </div>
                    <div class="form-group row">
                        <div class="col-sm-6 mb-3 mb-sm-0">
                          <input type="text" name="address" value="<%=site.address %>" class="form-control form-control-user"  placeholder="Address">
                        </div>
                        <div class="col-sm-6">
                          
                          <select name="status" class="form-control">
                            <option>Please select status</option>
                            <option value="1" <%=site.status == 1 ? 'selected': ''%> >Active</option>
                            <option value="0" <%=site.status == 0 ? 'selected': ''%> >Deactive</option>
                          </select>
                        </div>
                      </div>
                    <div class="form-group row">
                      <div class="col-sm-12 mb-3 mb-sm-0">
                          <input type="submit" name="submit" value="<%= !site.id ? 'Add' : 'Update' %> Site" class="btn btn-primary btn-user btn-block" >
                      </div>
                    </div>
                    
                  </form>
                </div>
      
              </div>
              <!-- /.container-fluid -->   

        </div>
        <!-- /.container-fluid -->

      </div>
      <!-- End of Main Content -->

     <% include ./common/footer %>