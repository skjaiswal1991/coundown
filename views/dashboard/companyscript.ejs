     <script>
     $('#cname').change(function(){
         
         var id = $(this).val();
         
         $.post('/genscript',{id},function(res){


            var html ='&lt;div id="sharedata">&lt;/div><br>';
                html +='&lt;script src="<%=script%>">&lt;/script><br>'
                html +='&lt;script type="text/javascript"><br>'
                html +='MYLIBRARY.init(["'+res.key+'",'+res.id+']);<br>'
                html +='&lt;/script>';
            $('#hemsg').html('Copy Script and Past where you what to display the countdown timer');
            $('#scriptdata').html(html);

         })
     })
     </script>