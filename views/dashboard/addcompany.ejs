<% include ./common/head %>
<% include ./common/sidebar %>


    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

      <!-- Main Content -->
      <div id="content">

        <% include ./common/navbar %>

        <!-- Begin Page Content -->
        <div class="container-fluid">

            <div class="container-fluid">

                <!-- Page Heading -->
                <h1 class="h3 mb-2 text-gray-800"><%= !companydata.id ? 'Add' : 'Update' %> Company</h1>
                <p class="mb-4">Fill the company details </p>
      
                <!-- DataTales Example -->
                <div class="card shadow mb-4">
                  <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary"></h6>
                  </div>
                  <form class="user" method="POST">
                    <div class="form-group row">
                      <div class="col-sm-6 mb-3 mb-sm-0">
                        <input type="text" name="cname" value="<%=companydata.cname%>" class="form-control form-control-user" id="exampleFirstName" placeholder="Company Name">
                      </div>
                      <div class="col-sm-6">
                        <input type="text" name="website" value="<%=companydata.website%>" class="form-control form-control-user" id="exampleLastName" placeholder="Website Url">
                      </div>
                    </div>
                    <div class="form-group row">
                      <div class="col-sm-6 mb-3 mb-sm-0">
                        <input type="email" name="email" value="<%=companydata.email%>" class="form-control form-control-user" id="exampleFirstName" placeholder="Email Id">
                      </div>
                      <div class="col-sm-6">
                        <input type="text" name="phone" value="<%=companydata.phone%>" class="form-control form-control-user" id="exampleLastName" placeholder="Phone Number">
                      </div>
                    </div>
                    <div class="form-group row">
                      <div class="col-sm-6 mb-3 mb-sm-0">
                        <input type="text" name="country" value="<%=companydata.country%>" class="form-control form-control-user" id="exampleFirstName" placeholder="Country">
                      </div>
                      <div class="col-sm-6">
                        <input type="text" name="state" value="<%=companydata.state%>" class="form-control form-control-user" id="exampleLastName" placeholder="State">
                      </div>
                    </div>
                    <div class="form-group row">
                      <div class="col-sm-6 mb-3 mb-sm-0">
                        <input type="text" name="street" value="<%=companydata.street%>" class="form-control form-control-user" id="exampleFirstName" placeholder="Street">
                      </div>
                      <div class="col-sm-6">
                        <input type="text" name="city" value="<%=companydata.city%>" class="form-control form-control-user" id="exampleLastName" placeholder="City">
                      </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-6 mb-3 mb-sm-0">
                            <input type="text" name="zip" value="<%=companydata.zip%>" class="form-control form-control-user" placeholder="Zip">
                        </div>
                        <div class="col-sm-6">
                          <input type="text" name="address" value="<%=companydata.address%>" class="form-control form-control-user"  placeholder="Address">
                        </div>
                      </div>
                    <div class="form-group row">
                        <div class="col-sm-6 mb-3 mb-sm-0">
                          <input type="text" name="apikey" value="<%=companydata.apikey ? companydata.apikey :  apikey%>" class="form-control form-control-user" id="exampleFirstName" placeholder="Api key">
                        </div>
                        <div class="col-sm-6">
                          
                          <select name="status" class="form-control">
                            <option>Please select status</option>
                            <option value="1" <%=companydata.is_active == 1 ? 'selected': ''%> >Active</option>
                            <option value="0" <%=companydata.is_active == 0 ? 'selected': ''%> >Deactive</option>
                          </select>
                        </div>
                      </div>
                      
                        
                    <div class="form-group row">
                      <div class="col-sm-12 mb-3 mb-sm-0">
                          <input type="submit" name="submit" value="<%= !companydata.id ? 'Add' : 'Update' %> Company" class="btn btn-primary btn-user btn-block" >
                      </div>
                    </div>
                    
                  </form>
                </div>
      
              </div>
              <!-- /.container-fluid -->   

        </div>
        <!-- /.container-fluid -->

      </div>
      <!-- End of Main Content -->

     <% include ./common/footer %>