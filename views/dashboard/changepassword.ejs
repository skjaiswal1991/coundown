<% include ./common/head %>
<% include ./common/sidebar %>


    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

      <!-- Main Content -->
      <div id="content">

        <% include ./common/navbar %>

        <!-- Begin Page Content -->
        <div class="container-fluid">

            <div class="container-fluid">

                <!-- Page Heading -->
                <h1 class="h3 mb-2 text-gray-800">Update Password</h1>
                <p class="mb-4">Fill the New Password </p>
                
                <% if(status === 'Success'){ %>
                 <div class="alert alert-success" role="alert">
                    <%=msg%>
                  </div>
                <%}%>
                <% if(status === 'Error'){ %>
                  <div class="alert alert-danger" role="alert">
                      <%=msg%>
                   </div>
                 <%}%>  
                <!-- DataTales Example -->
                <div class="card shadow mb-4">
                  <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary"></h6>
                  </div>
                  <form class="user" method="POST">
                    <div class="form-group row">
                        <div class="col-sm-6">
                            <input type="password" name="password" value="" id="pass" class="form-control form-control-user"  placeholder="password">
                        </div>
                        
                        <div class="col-sm-6">
                            <input type="password" name="confpassword" value="" id='confpass' class="form-control form-control-user"  placeholder="Confirm Password">
                        </div>
                      </div>
                    
                    <span id='error'></span>
                    <div class="form-group row">
                      <div class="col-sm-12 mb-3 mb-sm-0">
                          <input type="submit" name="submit" value="Update Password" class="btn btn-primary btn-user btn-block" >
                      </div>
                    </div>
                    
                  </form>
                </div>
      
              </div>
              <!-- /.container-fluid -->   

        </div>
        <!-- /.container-fluid -->

      </div>
      <!-- End of Main Content -->
      <script>
        
      </script>

     <% include ./common/footer %>